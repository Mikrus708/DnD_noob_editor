<Window x:Class="DnD_DM_Manager.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_DM_Manager"
        mc:Ignorable="d"
        Title="Equipment" Height="500" Width="300" MinHeight="350" MinWidth="200">
    <TabControl>
        <TabItem Header="Grid">
            <ListView Name="MainGrid" ItemsSource="{Binding}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Width="120" Height="100">
                            <Border Width="60" Height="60" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" >
                                <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{Binding pic}"/>
                            </Border>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </TabItem>
        <TabItem Header="List">

        </TabItem>
    </TabControl>
</Window>
