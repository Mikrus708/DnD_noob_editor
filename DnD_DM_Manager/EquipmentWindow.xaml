<Window x:Class="DnD_DM_Manager.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_DM_Manager"
        mc:Ignorable="d"
        Title="Equipment" Height="500" Width="450" MinHeight="350" MinWidth="200" Name="EqWnd" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TabControl Name="TabPanel">
            <TabItem Header="Grid">
                <ListView Name="MainGrid" ItemsSource="{Binding Inventory.Bag}" >

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Width="120" Height="120">
                                <Border Width="60" Height="60" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" >
                                    <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FFBB2D2D"/>
                                </Border>
                                <Label Content="{Binding Name}" HorizontalAlignment="Center"/>
                                <Label Content="{Binding ValueInCopper}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Width="{Binding ViewportWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </TabItem>
            <TabItem Header="List">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="Bisque"/>
                    <ListView Name="MainList" ItemsSource="{Binding Inventory.Bag}" Grid.Column="1">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Height="70">
                                    <Label Content="{Binding Name}" HorizontalAlignment="Center"/>
                                    <Label Content="{Binding Family}"/>
                                    <Label Content="{Binding Category}"/>
                                    <Label Content="{Binding ValueInCopper}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>


                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Width="80" Click="Add_New_Item" Content="Add"/>
            <Button Width="80" Click="Remove_Item" Content="Remove"/>
            <StackPanel Width="120">
                <Button Height="50" Click="Give_Item" Content="Give"/>
                <ComboBox Name="ComboInv" ItemsSource="{Binding ComboList}" Width="Auto" Height="30"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="sta" Grid.Row="2" Background="LightGray" Orientation="Horizontal" DataContext="{Binding Inventory}">
            <Label Content="Total weight: "/>
            <Label Content="{Binding TotalWeight}" />
            <Label Content="Total value: "/>
            <Label Content="{Binding TotalValue}" />
        </StackPanel>

    </Grid>
</Window>
